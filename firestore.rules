/**
 * @fileOverview Firestore Security Rules for the INTEMASS Automated Essay Grading System.
 *
 * Core Philosophy:
 * This ruleset is for the prototyping phase. Since there is no authentication, all data is publicly accessible.
 * This means both reads and writes are open to anyone. This is NOT secure for a production environment.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read or write individual questions.
     * @path /questions/{questionId}
     */
    match /questions/{questionId} {
      allow read, write: if true;
    }
    /**
     * @description Allows anyone to list all questions.
     * @path /questions
     */
    match /questions {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write individual standard answers.
     * @path /standardAnswers/{standardAnswerId}
     */
    match /standardAnswers/{standardAnswerId} {
      allow read, write: if true;
    }
    /**
     * @description Allows anyone to list all standard answers.
     * @path /standardAnswers
     */
    match /standardAnswers {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write individual marking schemes.
     * @path /markingSchemes/{markingSchemeId}
     */
    match /markingSchemes/{markingSchemeId} {
      allow read, write: if true;
    }
    /**
     * @description Allows anyone to list all marking schemes.
     * @path /markingSchemes
     */
    match /markingSchemes {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write individual student answers.
     * @path /studentAnswers/{studentAnswerId}
     */
    match /studentAnswers/{studentAnswerId} {
      allow read, write: if true;
    }
    /**
     * @description Allows anyone to list all student answers.
     * @path /studentAnswers
     */
    match /studentAnswers {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write individual grading results.
     * @path /gradingResults/{gradingResultId}
     */
    match /gradingResults/{gradingResultId} {
      allow read, write: if true;
    }
    /**
     * @description Allows anyone to list all grading results.
     * @path /gradingResults
     */
    match /gradingResults {
      allow list: if true;
    }
  }
}
