/**
 * @fileOverview Firestore Security Rules for the INTEMASS Automated Essay Grading System.
 *
 * Core Philosophy:
 * This ruleset is for the prototyping phase. Since there is no authentication, all data is publicly accessible.
 * This means both reads and writes are open to anyone. This is NOT secure for a production environment.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read or write questions during the prototyping phase.
     * @path /questions/{questionId}
     */
    match /questions/{questionId} {
      allow read, write: if true;
    }
    match /questions {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write standard answers during the prototyping phase.
     * @path /standardAnswers/{standardAnswerId}
     */
    match /standardAnswers/{standardAnswerId} {
      allow read, write: if true;
    }
    match /standardAnswers {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write marking schemes during the prototyping phase.
     * @path /markingSchemes/{markingSchemeId}
     */
    match /markingSchemes/{markingSchemeId} {
      allow read, write: if true;
    }
    match /markingSchemes {
      allow list: if true;
    }

    /**
     * @description Allows anyone to read or write student answers during the prototyping phase.
     * @path /studentAnswers/{studentAnswerId}
     */
    match /studentAnswers/{studentAnswerId} {
      allow read, write: if true;
    }
    match /studentAnswers {
      allow list: if true;
    }

    /**
* @description Allows anyone to read or write grading results during the prototyping phase.
* @path /gradingResults/{gradingResultId}
*/
    match /gradingResults/{gradingResultId} {
      allow read, write: if true;
    }
    match /gradingResults {
      allow list: if true;
    }
  }
}
