{
  "entities": {
    "Question": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Question",
      "type": "object",
      "description": "Represents a question created by a teacher.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the question." },
        "title": { "type": "string", "description": "The question text or prompt." },
        "subject": { "type": "string", "description": "The subject area of the question." },
        "curriculum": { "type": "string", "description": "The curriculum the question belongs to." },
        "maxPoints": { "type": "number", "description": "The total possible score for the question." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the question was created." },
        "updatedAt": { "type": "string", "format": "date-time", "description": "Timestamp when the question was last updated." }
      },
      "required": ["id", "title", "subject", "curriculum", "maxPoints", "createdAt", "updatedAt"]
    },
    "StandardAnswer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Standard Answer",
      "type": "object",
      "description": "Represents the ideal or standard answer for a question.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the standard answer." },
        "questionId": { "type": "string", "description": "Foreign key to the Question." },
        "fullText": { "type": "string", "description": "The complete text of the standard answer." },
        "sentenceList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pointNumber": { "type": "string" },
              "text": { "type": "string" },
              "keywords": { "type": "array", "items": { "type": "string" } },
              "weight": { "type": "number" },
              "requiredTerms": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["pointNumber", "text", "keywords", "weight", "requiredTerms"]
          }
        },
        "keywords": { "type": "array", "items": { "type": "string" } },
        "conceptMap": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "concept": { "type": "string" },
              "weight": { "type": "number" }
            },
            "required": ["concept", "weight"]
          }
        }
      },
      "required": ["id", "questionId", "fullText", "sentenceList", "keywords", "conceptMap"]
    },
    "MarkingScheme": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Marking Scheme",
      "type": "object",
      "description": "Defines the marking scheme and rules for grading a question.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the marking scheme." },
        "questionId": { "type": "string", "description": "Foreign key to the Question." },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ruleId": { "type": "string" },
              "condition": { "type": "string" },
              "points": { "type": "array", "items": { "type": "string" } },
              "marksAwarded": { "type": "number" },
              "description": { "type": "string" }
            },
            "required": ["ruleId", "condition", "points", "marksAwarded", "description"]
          }
        },
        "totalMarks": { "type": "number" },
        "passingThreshold": { "type": "number" }
      },
      "required": ["id", "questionId", "rules", "totalMarks", "passingThreshold"]
    },
    "StudentAnswer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Student Answer",
      "type": "object",
      "description": "Represents a student's submitted answer to a question.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the student's answer." },
        "questionId": { "type": "string", "description": "Foreign key to the Question." },
        "studentName": { "type": "string", "description": "The name of the student." },
        "answerText": { "type": "string", "description": "The text of the student's submitted essay." },
        "submittedAt": { "type": "string", "format": "date-time", "description": "Timestamp when the answer was submitted." },
        "processingStatus": { "type": "string", "enum": ["pending", "processing", "completed", "error"] }
      },
      "required": ["id", "questionId", "studentName", "answerText", "submittedAt", "processingStatus"]
    },
    "GradingResult": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Grading Result",
      "type": "object",
      "description": "Stores the complete result of a grading operation.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the grading result." },
        "studentAnswerId": { "type": "string", "description": "Foreign key to the StudentAnswer." },
        "totalScore": { "type": "number" },
        "maxScore": { "type": "number" },
        "percentage": { "type": "number" },
        "matchedPoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pointNumber": { "type": "string" },
              "standardText": { "type": "string" },
              "studentText": { "type": "string" },
              "similarityScore": { "type": "number" },
              "matchType": { "type": "string", "enum": ["exact", "high", "partial", "weak"] },
              "marksAwarded": { "type": "number" },
              "feedback": { "type": "string" }
            },
            "required": ["pointNumber", "standardText", "studentText", "similarityScore", "matchType", "marksAwarded", "feedback"]
          }
        },
        "missedPoints": { "type": "array", "items": { "type": "string" } },
        "overallFeedback": { "type": "string" },
        "processingTime": { "type": "number", "description": "milliseconds" },
        "gradedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "studentAnswerId", "totalScore", "maxScore", "percentage", "matchedPoints", "missedPoints", "overallFeedback", "processingTime", "gradedAt"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/questions/{questionId}",
        "definition": {
          "entityName": "Question",
          "schema": { "$ref": "#/backend/entities/Question" },
          "description": "Stores all questions created by teachers."
        }
      },
      {
        "path": "/standardAnswers/{standardAnswerId}",
        "definition": {
          "entityName": "StandardAnswer",
          "schema": { "$ref": "#/backend/entities/StandardAnswer" },
          "description": "Stores standard/ideal answers with point breakdown."
        }
      },
      {
        "path": "/markingSchemes/{markingSchemeId}",
        "definition": {
          "entityName": "MarkingScheme",
          "schema": { "$ref": "#/backend/entities/MarkingScheme" },
          "description": "Stores grading rules and marking criteria."
        }
      },
      {
        "path": "/studentAnswers/{studentAnswerId}",
        "definition": {
          "entityName": "StudentAnswer",
          "schema": { "$ref": "#/backend/entities/StudentAnswer" },
          "description": "Stores student submissions."
        }
      },
      {
        "path": "/gradingResults/{gradingResultId}",
        "definition": {
          "entityName": "GradingResult",
          "schema": { "$ref": "#/backend/entities/GradingResult" },
          "description": "Stores grading results and feedback."
        }
      }
    ],
    "reasoning": "The Firestore data structure is designed to support the INTEMASS Automated Essay Grading System. The structure uses separate top-level collections for each core entity (Questions, StandardAnswers, etc.). This approach is simple and effective for a prototype, allowing for easy querying of each data type. Since there is no authentication, all data is publicly accessible, and the security rules reflect this open-access policy. This flat structure avoids complex nested queries and is well-suited for the initial development phases."
  }
}
